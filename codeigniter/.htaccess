# Disable directory browsing
Options -Indexes

# ป้องกันการเข้าถึงไฟล์สำคัญ
<FilesMatch "^\.env|^composer\.(json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ป้องกันการเข้าถึงไฟล์ซ่อน และไฟล์ระบบ
<FilesMatch "^\.(?!well-known)|^composer\.(json|lock)$|^\.env|^\.git|^\.htaccess">
    Order allow,deny
    Deny from all
</FilesMatch>

# ป้องกันการเข้าถึงโฟลเดอร์ระบบ
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(app|system|writable|tests|vendor) - [F,L]
</IfModule>

# เปิดใช้งาน HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # ป้องกัน Clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # ป้องกัน Content-Type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # ป้องกัน XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header set Referrer-Policy "same-origin"
    
    # Feature Policy
    Header set Feature-Policy "camera 'none'; microphone 'none'; geolocation 'none'"
    
    # Strict Transport Security (HSTS)
    # ใช้ max-age ประมาณ 1 ปี
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# กำหนด CodeIgniter index.php rewrite rule
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>